.cc-popup {
  position: fixed;
  z-index: 1000;
  background: #fff;
  max-height: 80vh;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  opacity: 0;
  box-sizing: border-box;
}

/* Center */
.cc-popup--center {
  left: 50%;
  top: 50%;
  transform: translate(-50%, -40%) scale(0.96);
  border-radius: 16rpx;
  max-width: 90vw;
  max-height: 80vh;
}
.cc-popup--center.show {
  transform: translate(-50%, -50%) scale(1);
  opacity: 1;
}

/* Bottom */
.cc-popup--bottom {
  left: 0;
  right: 0;
  bottom: 0;
  transform: translateY(100%);
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  max-height: 90vh;
}
.cc-popup--bottom.show {
  transform: translateY(0);
  opacity: 1;
}

/* Top */
.cc-popup--top {
  left: 0;
  right: 0;
  top: 0;
  transform: translateY(-100%);
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  max-height: 90vh;
}
.cc-popup--top.show {
  transform: translateY(0);
  opacity: 1;
}

/* Left */
.cc-popup--left {
  left: 0;
  top: 0;
  bottom: 0;
  width: 70vw;
  transform: translateX(-100%);
  max-width: 80vw;
}
.cc-popup--left.show {
  transform: translateX(0);
  opacity: 1;
}

/* Right */
.cc-popup--right {
  right: 0;
  top: 0;
  bottom: 0;
  width: 70vw;
  transform: translateX(100%);
  max-width: 80vw;
}
.cc-popup--right.show {
  transform: translateX(0);
  opacity: 1;
}

/* Content spacing */
.cc-popup__content {
  padding: 32rpx;
}

/* Safe area helper */
.cc-safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}
.cc-safe-area-top {
  padding-top: env(safe-area-inset-top);
}
.cc-safe-area-tabbar {
  padding-bottom: 112rpx;
}

/* Round modifier */
.is-round.cc-popup--center {
  border-radius: 24rpx;
}
.is-round.cc-popup--top {
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}
.is-round.cc-popup--bottom {
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}
.is-round.cc-popup--left {
  border-top-right-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}
.is-round.cc-popup--right {
  border-top-left-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
}

/* Close icon */
.cc-popup__close {
  position: absolute;
  z-index: 1;
  padding: 16rpx;
  color: #969799;
  cursor: pointer;
  transition: all 0.2s ease;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.04);
}

.cc-popup__close:active {
  background: rgba(0, 0, 0, 0.08);
  transform: scale(0.95);
}

.cc-popup__close-icon {
  font-size: 36rpx;
  line-height: 1;
}

/* Close icon positions */
.cc-popup__close--top-right {
  top: 16rpx;
  right: 16rpx;
}
.cc-popup__close--top-left {
  top: 16rpx;
  left: 16rpx;
}
.cc-popup__close--bottom-right {
  bottom: 16rpx;
  right: 16rpx;
}
.cc-popup__close--bottom-left {
  bottom: 16rpx;
  left: 16rpx;
}
.cc-popup__close--center-top {
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
}
.cc-popup__close--center-bottom {
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
}
.cc-popup__close--center-left {
  left: -20rpx;
  top: 50%;
  transform: translateY(-50%);
}
.cc-popup__close--center-right {
  right: -20rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* Animation enhancements */
.cc-popup.show {
  transition-timing-function: cubic-bezier(0.25, 0.8, 0.25, 1);
}

/* Shadow and blur effects */
.cc-popup--shadow {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.cc-popup--blur {
  backdrop-filter: blur(10rpx);
  background-color: rgba(255, 255, 255, 0.9);
}

/* Responsive adjustments */
@media (max-width: 750rpx) {
  .cc-popup--left,
  .cc-popup--right {
    width: 85vw;
    max-width: 85vw;
  }

  .cc-popup--center {
    max-width: 95vw;
  }
}
