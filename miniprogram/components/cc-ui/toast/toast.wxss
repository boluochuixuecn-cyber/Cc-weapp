.cc-toast { position: fixed; left: 50%; top: 50%; transform: translate(-50%, -50%) scale(0.96); background: rgba(0,0,0,0.8); color: #fff; padding: 24rpx 28rpx; border-radius: 16rpx; opacity: 0; transition: transform 0.18s ease, opacity 0.18s ease; }
.cc-toast.show { opacity: 1; transform: translate(-50%, -50%) scale(1); }
.cc-toast__content { display: flex; align-items: center; }
.cc-toast__spinner { width: 36rpx; height: 36rpx; border: 4rpx solid rgba(255,255,255,0.4); border-top-color: #fff; border-radius: 50%; margin-right: 12rpx; animation: cc-spin 1s linear infinite; }
.cc-toast__text { font-size: 28rpx; }
@keyframes cc-spin { to { transform: rotate(360deg); } }

/* Position variants */
.cc-toast.cc-toast--pos-top { top: 15%; transform: translate(-50%, 0) scale(0.96); }
.cc-toast.cc-toast--pos-top.show { transform: translate(-50%, 0) scale(1); }
.cc-toast.cc-toast--pos-bottom { top: auto; bottom: 15%; transform: translate(-50%, 0) scale(0.96); }
.cc-toast.cc-toast--pos-bottom.show { transform: translate(-50%, 0) scale(1); }
