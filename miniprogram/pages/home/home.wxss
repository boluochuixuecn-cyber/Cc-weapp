.home {
  padding: 24rpx;
}
.home__header {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
}
.home__group {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}
.home__group-title {
  font-size: 26rpx;
  color: #646566;
  padding: 16rpx 24rpx;
  background: #fafafa;
}
.home__item {
  padding: 28rpx 24rpx;
  font-size: 30rpx;
  display: block;
}
.home__item:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
}
