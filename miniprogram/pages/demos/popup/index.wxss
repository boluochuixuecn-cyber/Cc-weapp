.page {
  padding: 16px;
}

.section {
  margin-bottom: 24px;
}

.section__title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 8px;
  color: #323233;
}

.code {
  background: #f7f8fa;
  padding: 12px;
  border-radius: 6px;
  font-family: monospace;
  font-size: 14px;
  color: #646566;
}

.cc-popup__content {
  padding: 32rpx;
  min-width: 300rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
  margin-bottom: 16rpx;
  text-align: center;
}

.popup-text {
  font-size: 28rpx;
  color: #646566;
  line-height: 1.5;
  text-align: center;
}
