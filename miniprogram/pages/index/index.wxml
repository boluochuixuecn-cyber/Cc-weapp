<view class="container">
  <view class="title">CC UI 组件库</view>
  
  <view class="section">
    <view class="section-title">组件演示</view>
    <view class="button-group">
      <cc-button type="primary" bind:tap="openPopup('center')">居中弹出</cc-button>
      <cc-button type="primary" bind:tap="openPopup('bottom')">底部弹出</cc-button>
      <cc-button type="primary" bind:tap="openPopup('top')">顶部弹出</cc-button>
      <cc-button type="primary" bind:tap="openPopup('left')">左侧弹出</cc-button>
      <cc-button type="primary" bind:tap="openPopup('right')">右侧弹出</cc-button>
    </view>
  </view>

  <!-- Popup 弹窗 -->
  <cc-popup show="{{showPopup}}" position="{{popupPosition}}" bind:close="closePopup">
    <view class="popup-content">
      <view class="popup-title">这是一个 {{popupPosition}} 弹窗</view>
      <view class="popup-text">这是弹窗的内容区域，可以放置任何内容</view>
    </view>
  </cc-popup>
</view>
