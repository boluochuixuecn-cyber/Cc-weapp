.container {
  padding: 32rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 48rpx;
  color: #323233;
}

.section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #323233;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.popup-content {
  padding: 48rpx;
  min-width: 400rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #323233;
  margin-bottom: 24rpx;
  text-align: center;
}

.popup-text {
  font-size: 28rpx;
  color: #646566;
  line-height: 1.6;
  text-align: center;
}
